{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: CLI (Spotify library)",
            "type": "debugpy",
            "request": "launch",
            "module": "sortipy.ui.cli",
            "args": [
                "spotify-library",
                "--user-id",
                "623310c4-99bd-4a0b-ad7c-eb5b61d9a796",
                "--batch-size",
                "5",
                "--max-tracks",
                "5",
                "--max-albums",
                "5",
                "--max-artists",
                "5",
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
        {
            "name": "Python: CLI (Last.fm)",
            "type": "debugpy",
            "request": "launch",
            "module": "sortipy.ui.cli",
            "args": [
                "lastfm",
                "--user-id",
                "623310c4-99bd-4a0b-ad7c-eb5b61d9a796",
                "--max-events",
                "10"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
        {
            "name": "Python: CLI (Musicbrainz Recordings)",
            "type": "debugpy",
            "request": "launch",
            "module": "sortipy.ui.cli",
            "args": [
                "musicbrainz-recordings",
                "--limit",
                "2",
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        }
    ]
}
